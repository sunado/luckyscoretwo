<ol class="breadcrumb" id="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/admin">Dashboard</a>
    </li>
</ol>

<div class="row top-buffer justify-content-center">
    <div class="ui fluid search selection dropdown col col-md-3">
        <input type="hidden" name="user" id="user-id">
        <i class="dropdown icon"></i>
        <div class="default text">{{title}}</div>
        <div class="menu">
            {{#each votes as |vote voteId| }}
            {{!-- <option data-value="{{user.id}}">{{user.name}}</option> --}}
            <div class="item" data-value="{{voteId}}">{{vote.name}}</div>
            {{/each}}
        </div>
    </div>
</div>

<div class="row justify-content-center" style="margin-top: 1em">
    <div class="col-lg-4">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-chart-pie"></i>
                Pie Chart </div>
            <div class="card-body">
                <canvas id="myPieChart" width="100%" height="100"></canvas>
            </div>
            <div class="card-footer small text-muted">Updated Now</div>
        </div>
    </div>
</div>

<div class="row justify-content-center" style="margin-top: 1em">
    <div class="col-lg-4">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-chart-bar"></i>
                Bar Chart </div>
            <div class="card-body">
                <canvas id="myBarChart" width="100%" height="50"></canvas>
            </div>
            <div class="card-footer small text-muted">Updated Now</div>
        </div>
    </div>
</div>